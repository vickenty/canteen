<!DOCTYPE html>
% my $nav_link = begin
    % my ($name, $href) = @_;
    % my $active = "active" if (url_match $href);
    %= tag 'li', ($active ? (class => join(" ", $active)) : ()) => begin
        %= link_to $name => $href
    %= end
% end

<html>
    <head>
        <title><%= title %></title>
        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
        <link href="/vendor/datepicker.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            % if (current_user) {
                <div class="navbar">
                    <div class="navbar-inner">
                        <ul class="nav">
                            %= $nav_link->("Votes", "/view");
                            %= $nav_link->("Menus", "/edit");
                        </ul>
                        <ul class="nav pull-right">
                            %= $nav_link->("Profile", "/profile");
                            %= $nav_link->("Sign out", "/signout")
                        </ul>
                    </div>
                </div>
            % }
            <div class="page-header">
                <h1><%= title %></h1>
            </div>

            % my $msg = flash 'message';
            % if ($msg) {
                % my $type = flash('type');
                % $type = "alert-$type" if ($type);
                %= tag 'div', class => join(' ', 'alert', $type), => begin
                    <button class="close" data-dismiss="alert">&times;</button>
                    %= $msg
                %= end
            % }

            <%= content %>
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
        <script src="/vendor/bootstrap-datepicker.js"></script>
        <script src="/edit_menu_item.js"></script>
        <script src="/add_menu.js"></script>
    </body>
</html>
